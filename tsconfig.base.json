{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react", // or "react-jsx" for React 17+
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ecommerce-mono-repo/api-client-lib": [
        "libs/api-client-lib/src/index.ts"
      ],
      "@ecommerce-mono-repo/auth-lib": ["libs/auth-lib/src/index.ts"],
      "@ecommerce-mono-repo/cart-lib": ["libs/cart-lib/src/index.ts"],
      "@ecommerce-mono-repo/order-lib": ["libs/order-lib/src/index.ts"],
      "@ecommerce-mono-repo/product-lib": ["libs/product-lib/src/index.ts"],
      "@ecommerce-mono-repo/shared-ui": ["libs/shared-ui/src/index.ts"],
      "@ecommerce-mono-repo/state-management": [
        "libs/state-management/src/index.ts"
      ]
    },
    "esModuleInterop": true, // Enable esModuleInterop
    "allowSyntheticDefaultImports": true // Optional: allows default imports from non-ES modules
  },
  "exclude": ["node_modules", "tmp"]
}
